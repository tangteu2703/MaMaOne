<Window x:Class="VideoDownloader.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Video Downloader" Height="220" Width="650"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Line 1: Link Input -->
        <Grid Grid.Row="0" Margin="0,0,0,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Label Grid.Column="0" Content="Link video:" VerticalAlignment="Center"/>
            <TextBox x:Name="LinkTextBox" Grid.Column="1" Height="25" Margin="10,0,0,0" 
                     VerticalContentAlignment="Center" Padding="5"/>
        </Grid>

        <!-- Line 2: Save Location -->
        <Grid Grid.Row="1" Margin="0,0,0,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="80"/>
            </Grid.ColumnDefinitions>
            <Label Grid.Column="0" Content="Lưu tại:" VerticalAlignment="Center"/>
            <Label x:Name="PathLabel" Grid.Column="1" Content="Chọn thư mục lưu..." 
                   BorderBrush="Gray" BorderThickness="1" Background="White"
                   VerticalContentAlignment="Center" Padding="5" Margin="10,0,10,0"/>
            <Button x:Name="BrowseButton" Grid.Column="2" Content="Chọn..." 
                    Click="BrowseButton_Click" Height="25"/>
        </Grid>

        <!-- Line 3: Download Button and Progress -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button x:Name="DownloadButton" Grid.Column="0" Content="Tải Video" 
                    Click="DownloadButton_Click" Height="40" FontSize="14" FontWeight="Bold"
                    Background="#4CAF50" Foreground="White" BorderThickness="0"/>
            <StackPanel Grid.Column="1" Margin="20,0,0,0">
                <Label x:Name="StatusLabel" Content="Sẵn sàng" FontSize="11" Margin="0,0,0,5"/>
                <ProgressBar x:Name="ProgressBar" Height="20" Minimum="0" Maximum="100" Value="0"/>
                <Label x:Name="TimeLabel" Content="" FontSize="9" Margin="0,5,0,0" Foreground="Gray"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>

